            <div class="d-flex align-items-center gap-3">
            </div>
            <div class="d-flex align-items-center gap-3 mx-2 fw-bold">
                <span class="text-danger">
                    <img src="https://jollibee.com.vn/static/version1733414187/frontend/Jollibee/default/vi_VN/images/flag-vn.png"
                         alt="Jollibee Logo" height="20"> VN
                </span>
                <span class="text-black">|</span>
                <span class="text-black">
                    <img src="https://jollibee.com.vn/static/version1733414187/frontend/Jollibee/default/vi_VN/images/flag-en.png"
                         alt="Jollibee Logo" height="18"> EN
                </span>
                <span class="text-black mx-3">
                    <i class="bi bi-geo-alt-fill"></i> Hồ Chí Minh
                </span>
                <a href="#" class="menu-link text-black fw-bold text-decoration-none me-3" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
                    <i class="bi bi-person-circle"></i> ĐĂNG NHẬP
                </a>
                <a href="/Register/Index" class=" text-black fw-bold text-decoration-none">
                    <i class="bi bi-pencil-square"></i>ĐĂNG KÝ
                </a>
            </div>
        </div>
        <div class="px-5 menu">
            <button class="offenmenumobile" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasExample" aria-controls="offcanvasExample"><i class="bi bi-list"></i></button>
            <div class="d-flex">
                <div class="logo pe-5 py-1">
                    <a href="/HomePage/Index">
                        <img src="https://jollibee.com.vn/static/version1733414187/frontend/Jollibee/default/vi_VN/images/logo.png"
                             alt="Jollibee Logo" height="100" width="100">
                    </a>
                </div>
                <ul class="d-flex list-unstyled sub-menu mb-0">
                    <li class="pt-5 fw-bolder"><a href="/HomePage/Index" class="p-3 nav-item active">TRANG CHỦ</a></li>
                    <li class="pt-5 fw-bolder"><a href="/About/Index" class="p-3 nav-item">VỀ JOLLIBEE</a></li>
                    <li class="pt-5 fw-bolder"><a href="/Menu/Index" class="p-3 nav-item">THỰC ĐƠN</a></li>
                    <li class="pt-5 fw-bolder"><a href="/Promotion/Index" class="p-3 nav-item">KHUYẾN MÃI</a></li>
                    <li class="pt-5 fw-bolder"><a href="#" class="p-3 nav-item">DỊCH VỤ</a></li>
                    <li class="pt-5 fw-bolder"><a href="/NewsPage/Index" class="p-3 nav-item">TIN TỨC</a></li>
                    <li class="pt-5 fw-bolder"><a href="#" class="p-3 nav-item">CỬA HÀNG</a></li>
                    <li class="pt-5 fw-bolder"><a href="#" class="p-3 nav-item">TUYỂN DỤNG</a></li>
                </ul>

                <div class="d-flex align-items-center gap-3 ms-auto">
                    <a href="#" class="btn btn-warning text-danger shadow p-3 rounded fw-bold rounded-pill px-4 py-2">PICK UP</a>
                    <div class="text-end">
                        <small class="rounded-pill p-1">
                            <img src="https://jollibee.com.vn/media/wysiwyg/delivery-lg-rs.png" alt="Jollibee Logo" height="40">
                        </small>
                    </div>
                </div>

            </div>
        </div>
    </header>
    @RenderBody()
    @RenderSection("HomePage", required: false)
    @RenderSection("About", required: false)
    @RenderSection("MenuPage", required: false)
    @RenderSection("Promotion_Page", required: false)
    @RenderSection("ServicePage", required: false)
    @RenderSection("News_Page", required: false)
    @RenderSection("RegisterPage", required: false)

    <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
         aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div>
                    <div class="custom-close-btn" data-bs-dismiss="modal" aria-label="Close"></div>
                </div>

                <div class="modal-logo">
                    <a href="" class="logo">
                        <img src="https://jollibee.com.vn/static/version1734017136/frontend/Jollibee/default/vi_VN/images/logo.png"
                             alt="jollibee" class="d-block">
                    </a>
                </div>
                <div class="modal-title">
                    <span class="spantitle">VUI LÒNG ĐĂNG NHẬP</span>
                </div>
                <div class="modal-body">
                    <form action="">
                        <div class="form-login">
                            <div class="mb-3">
                                <input type="text" class="form-control mb-3" name="" id="" aria-describedby="accout"
                                       placeholder="Email / Số điện thoại" />
                            </div>
                            <div class="mb-3 position-relative text-end">
                                <input type="password" class="form-control mb-3" id="password"
                                       placeholder="Mật khẩu" />
                                <a href="#" class="forgot-password text-white">Quên mật khẩu?</a>
                            </div>

                        </div>

                        <div class="btn-tools text-center">
                            <div class="tool">
                                <div class="d-flex justify-content-center">
                                    <div class="btn btn-login w-100">
                                        Đăng nhập
                                    </div>
                                </div>
                                <div class="text-center py-3">
                                    <span>Bạn chưa có tài khoản? </span>
                                    <a href="#" class="text-black fw-bold text-decoration-none">Đăng ký ngay</a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

