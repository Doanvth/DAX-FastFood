@model DAX_FastFood.ViewModels.CartItemViewModel
    <div class="container mt-5">
        <!-- Tiêu đề -->
        <div class="row mb-4">
            <div class="col-12 text-center">
                <h2 class="text-danger fw-bold">Giỏ Hàng Của Bạn</h2>
            </div>
        </div>

        <!-- Danh sách sản phẩm -->
        <div class="row">
        @if (Model != null && Model.CartItems != null && Model.CartItems.Count > 0)
        {
            foreach (var item in Model.CartItems)
            {
                <div class="col-12 border-bottom pb-3 mb-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <img src="@item.Image" alt="Product" class="rounded" style="width: 80px; height: 80px; object-fit: cover;">
                        <div class="ms-3 flex-grow-1">
                            <p class="fw-bold mb-1">@item.ProductName</p>
                            <p class="text-muted small mb-1">@item.Quantity x @item.Price ₫</p>
                            <div class="d-flex align-items-center">
                                <button class="btn btn-outline-secondary btn-sm me-2">-</button>
                                <input type="text" class="form-control text-center mx-2" style="width: 50px;" value="@item.Quantity" readonly>
                                <button class="btn btn-outline-secondary btn-sm ms-2">+</button>
                            </div>
                        </div>
                        <div class="text-end">
                            <p class="fw-bold mb-0">@item.Price ₫</p>
                        </div>
                        <div class="ms-3">
                            <button class="btn btn-warning btn-sm me-2">✏️</button>
                            <button class="btn btn-danger btn-sm">🗑️</button>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center text-muted">
                <p>Giỏ hàng của bạn trống.</p>
            </div>
        }

        </div>

   
    </div>


