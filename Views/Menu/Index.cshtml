@model IEnumerable<dynamic>

@section MenuPage {
    <link rel="stylesheet" href="~/css/Menu_Page.css" />
    <meta charset="utf-8">
    <main>
        <div class="container p-5" style="font-weight: bold;">
            <div class="productsList py-5">
                <div class="row">
                    @foreach (var product in Model)
                    {
                        <div class="col-md-4 p-0 mt-0">
                            <a href="#">
                                <div class="productItem px-5 py-4">
                                    <img src="@product.Image" alt="@product.ProductName" class="img-fluid productImg">
                                    <h5 class="text-dark mt-3 productTTitle">@product.ProductName</h5>
                                    <p class="productPrice mb-4">@product.Price.ToString("N0") ₫</p>
                                    <a class="btn productOder">Đặt Hàng</a>
                                </div>
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Giỏ hàng -->
        <div class="cart-btn-container">
            <button class="btn px-5 rounded-top cart-btn">
                <i class="bi bi-cart2 fs-4"></i>
                <span class="cart-text">0 ₫</span>
            </button>
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}
