<style>
    /* Step Progress Header */
    .step-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin: 40px 0;
        gap: 20px;
    }

    .step {
        position: relative;
        flex: 1;
        text-align: center;
        font-weight: bold;
        font-size: 16px;
        padding: 15px;
        background-color: #dc3545;
        color: #fff;
        border-radius: 10px;
        z-index: 1;
    }

        .step.active {
            background-color: orange;
            color: white;
        }

        .step.completed {
            background-color: #dc3545;
            color: white;
        }

            .step.completed .circle {
                background-color: white;
                color: #dc3545;
                border: 2px solid #dc3545;
            }

        .step .circle {
            width: 35px;
            height: 35px;
            border-radius: 50%;
            background-color: white;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            font-size: 16px;
            font-weight: bold;
            color: black;
            position: absolute;
            top: -18px;
            left: calc(50% - 17.5px);
            border: 2px solid black;
        }

        .step:not(:last-child)::after {
            content: '';
            position: absolute;
            top: 50%;
            right: -10%;
            transform: translateY(-50%);
            width: 20%;
            height: 2px;
            background-color: white;
            z-index: 0;
        }

    .divider {
        border-top: 1px solid #ccc;
        margin: 20px 0;
    }

    .btn-custom {
        padding: 10px 20px;
        font-size: 16px;
    }

    .note-box textarea {
        resize: none;
    }

    .details-summary {
        background-color: #f8f4e8;
        padding: 15px;
        border-radius: 10px;
    }

        .details-summary img {
            width: 50px;
            margin-right: 10px;
        }

    .order-summary {
        background-color: #f8f4e8;
        padding: 20px;
        border-radius: 10px;
        margin-top: 20px;
    }

        .order-summary h5 {
            font-weight: bold;
        }

    .order-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        border-bottom: 1px dashed #ccc;
        padding: 10px 0;
    }

        .order-item:last-child {
            border-bottom: none;
        }

        .order-item img {
            width: 70px;
            border-radius: 5px;
            margin-right: 10px;
        }

    .total-price {
        font-size: 20px;
        font-weight: bold;
        color: #dc3545;
    }

    .total-text {
        font-weight: bold;
    }

    .note {
        font-style: italic;
        color: #888;
    }
</style>

