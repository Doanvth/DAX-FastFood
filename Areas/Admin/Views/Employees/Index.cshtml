@model IEnumerable<DAX_FastFood.Models.Employee>

@{
    ViewData["Title"] = "Employee List";
}

<div class="container mt-5">
    <h1 class="text-center">Employee List</h1>

    <div class="mb-3">
        <a asp-action="Create" class="btn btn-create">Create New</a>
    </div>

    <table class="table table-bordered table-hover">
    <thead>
        <tr>
                <th>@Html.DisplayNameFor(model => model.FullName)</th>
                <th>@Html.DisplayNameFor(model => model.Email)</th>
                <th>@Html.DisplayNameFor(model => model.PhoneNumber)</th>
                <th>@Html.DisplayNameFor(model => model.Role)</th>
                <th>Actions</th>
        </tr>
    </thead>
    <tbody>
            @foreach (var item in Model)
            {
        <tr>
                    <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                    <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                    <td>@Html.DisplayFor(modelItem => item.Role.RoleName)</td>
            <td>
                        <a asp-action="Edit" asp-route-id="@item.EmployeeId" class="text-primary">Edit</a> |
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role.RoleName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EmployeeId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.EmployeeId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.EmployeeId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
<style>
    /* Table Styling */
    .table {
        border-collapse: collapse;
        margin: 25px 0;
        font-size: 16px;
        text-align: left;
        background-color: #fff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        border-radius: 5px;
        overflow: hidden;
    }

        .table thead tr {
            background-color: #007bff;
            color: #ffffff;
            text-align: center;
            font-weight: bold;
        }

        .table tbody tr:nth-of-type(even) {
            background-color: #f3f3f3;
        }

        .table tbody tr:hover {
            background-color: #f1f1f1;
        }

        .table th, .table td {
            padding: 12px 15px;
        }

        .table a {
            text-decoration: none;
            color: #007bff;
            margin-right: 10px;
        }

            .table a:hover {
                color: #0056b3;
                text-decoration: underline;
            }

    /* Heading Styling */
    h1 {
        font-family: Arial, sans-serif;
        font-size: 2rem;
        color: #333;
        margin-bottom: 20px;
    }

    /* Buttons Styling */
    .btn-create {
        background-color: #28a745;
        color: white;
        padding: 10px 15px;
        border-radius: 5px;
        text-decoration: none;
    }

        .btn-create:hover {
            background-color: #218838;
            color: white;
        }

</style>
