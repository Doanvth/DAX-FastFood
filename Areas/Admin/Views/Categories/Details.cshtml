@model DAX_FastFood.Areas.Admin.Models.Category

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Category</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CategoryName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CategoryName)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.CategoryId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
<style>
    /* Tiêu đề trang */
    h1 {
        font-size: 2.5rem;
        font-weight: bold;
        color: #2c3e50;
        margin-bottom: 20px;
        text-align: center;
        text-transform: uppercase;
    }

    /* Tiêu đề phần chi tiết */
    h4 {
        font-size: 1.5rem;
        font-weight: bold;
        color: #495057;
        margin-bottom: 15px;
    }

    /* Dòng ngăn cách */
    hr {
        border: 1px solid #ddd;
        margin: 20px 0;
    }

    /* Thẻ <dl> dùng để hiển thị chi tiết */
    dl.row {
        margin-top: 20px;
        padding: 20px;
        background-color: #f9f9f9;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    dt {
        font-size: 1rem;
        font-weight: bold;
        color: #2c3e50;
        text-transform: capitalize;
    }

    dd {
        font-size: 1rem;
        color: #495057;
    }

    /* Liên kết (Links) */
    a {
        font-size: 1rem;
        font-weight: bold;
        text-decoration: none;
        color: #007bff;
        transition: color 0.3s ease, text-decoration 0.3s ease;
    }

    a:hover {
        color: #0056b3;
        text-decoration: underline;
    }

    /* Nút liên kết */
    a + a {
        margin-left: 15px;
    }

  
</style>
