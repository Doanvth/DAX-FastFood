<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Soft UI Dashboard</title>
    <!-- Bootstrap 5 CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css"
          rel="stylesheet" />

    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f8f9fa; /* Màu nền chung nhạt */
        }

        /* Sidebar */
        .sidebar {
            height: 100vh;
            width: 240px;
            position: fixed;
            background: linear-gradient(135deg, #E92529, #D81A1A); /* Gradient đỏ */
            color: #fff; /* Chữ màu trắng */
            padding: 20px 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        }

            .sidebar h5 {
                color: #FFCC00; /* Màu vàng */
                font-weight: bold;
            }

            .sidebar a {
                color: #fff; /* Màu chữ trắng mặc định */
                text-decoration: none;
                display: flex;
                align-items: center;
                margin-bottom: 15px;
                padding: 10px 15px;
                border-radius: 10px;
                transition: all 0.3s ease;
            }

                .sidebar a:hover {
                    background-color: #FFCC00; /* Màu vàng khi hover */
                    color: #E92529; /* Chữ màu đỏ */
                }

                .sidebar a:focus,
                .sidebar a:target {
                    background-color: #fff; /* Nền trắng khi nhấn */
                    color: #E92529 !important; /* Chữ màu đỏ */
                    font-weight: bold;
                }

                    .sidebar a:focus i,
                    .sidebar a:target i {
                        color: #E92529; /* Icon màu đỏ */
                    }

                .sidebar a i {
                    margin-right: 10px;
                    color: #FFCC00; /* Màu vàng cho icon */
                    transition: color 0.3s;
                }

        /* Navbar */
        .navbar {
            margin-left: 240px;
            background-color: #E92529; /* Navbar đỏ */
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            padding: 10px 20px;
        }

            .navbar .form-control {
                border-radius: 10px;
                box-shadow: none;
                border: 1px solid #FFCC00; /* Viền vàng */
            }

            .navbar button {
                border-radius: 10px;
                background-color: #FFCC00; /* Nền vàng */
                color: #E92529; /* Chữ đỏ */
                border: none;
                transition: background-color 0.3s;
            }

                .navbar button:hover {
                    background-color: #FFD700; /* Vàng sáng khi hover */
                    color: #E92529;
                }

        /* Content Wrapper */
        .content-wrapper {
            margin-left: 240px;
            padding: 20px;
            min-height: 100vh;
            background-color: #f8f9fa; /* Màu nền sáng */
            color: #333; /* Màu chữ mặc định */
        }


    </style>
</head>
<body>
    <aside class="sidebar">
        <h5 class="text-center mb-4 fw-bold">Admin</h5>
        <a href="#@Url.Action("Index","product")" " tabindex="0"> <i class="bi bi-box-seam"></i>  Product</a>
        <a href="#rtl" tabindex="0"><i class="bi bi-cart-fill"></i>  Orders</a>
        <a href="#tables" tabindex="0"><i class="bi bi-tags-fill"></i> Category</a>
        <a href="#billing" tabindex="0"> <i class="bi bi-shield-lock-fill"></i> Role</a>
        <a href="#vr" tabindex="0"><i class="bi bi-people-fill"></i> Employees</a>
        <a href="#rtl" tabindex="0"><i class="bi bi-person-check-fill"></i>Customers</a>
        <a href="#rtl" tabindex="0">  <i class="bi bi-chat-dots-fill"></i> FeedBack</a>

        <h6 class="mt-4 mb-2 fw-bold text-white">Account Pages</h6>
        <a href="#profile" tabindex="0"><i class="fa fa-user"></i> Profile</a>
        <a href="#signin" tabindex="0"><i class="fa fa-sign-in-alt"></i> Sign In</a>
        <a href="#signout" tabindex="0"><i class="fa fa-sign-out-alt"></i> Sign Out</a>
    </aside>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container-fluid">
       
            <div class="ms-auto d-flex align-items-center">
                <input class="form-control me-3" type="search" placeholder="Type here..." style="width: 200px;">

                </ul>
            </div>
        </div>
    </nav>

    <!-- Content Wrapper -->
    <div class="content-wrapper">
        @RenderBody()

        @RenderSection("CreateCategory", required: false)
        @RenderSection("EditCategory", required: false)
        @RenderSection("DeleteCategory", required: false)
        @RenderSection("DetailCategory", required: false)
        @RenderSection("Scripts", required: false)

        @RenderSection("CreateEmployee", required: false)
        @RenderSection("EditEmployee", required: false)
        @RenderSection("DeleteEmployee", required: false)
        @RenderSection("DetailEmployee", required: false)
    </div>

    <!-- Footer -->
    <footer class="bg-dark text-white mt-5 py-3 text-center">
        <div class="container">
            <p class="mb-0">© 2024 DAX FastFood. All rights reserved.</p>
        </div>
    </footer>

   
    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
